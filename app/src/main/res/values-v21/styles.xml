<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="myProgress">
        <item name="progressBarStyle">@color/grey</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="myCardStyle"
        parent="CardView">
        <item name="cornerRadius">7dp</item>
        <item name="cardBackgroundColor">@color/greyLight</item>
        <item name="strokeColor">@color/greyLight</item>
        <item name="strokeWidth">10dp</item>
        <item name="cardElevation">20dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="myBlueButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#223d7e</item>
    </style>

    <style name="myAddExpensesPopupButton"
        parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/barBueColor</item>
    </style>

</resources>