<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="AppMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--<style name="MyTextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
    </style>-->

    <style name="DialogActivityTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">
            #ffffff
        </item>
    </style>

    <style name="MyBackButton">

        <item name="android:background">@color/sapphire_blue</item>
        <item name="android:shape">rectangle</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/sapphire_blue</item>

    </style>

    <style name="myProgress">
        <item name="progressBarStyle">@color/grey</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
    </style>

    <style name="myScrollbar">


        <item name="cornerRadius">10dp</item>


    </style>

    <style name="MyNextButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/taskBlueColor</item>
        <item name="strokeColor">@color/taskBlueColor</item>
        <item name="strokeWidth">1dip</item>
        <item name="cornerRadius">5dip</item>
        //..
    </style>

    <style name="myTaskButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/taskBlueColor</item>
        <item name="strokeColor">@color/taskBlueColor</item>
        <item name="strokeWidth">1dip</item>
        <item name="cornerRadius">3dip</item>
    </style>

    <style name="myCardStyle" parent="CardView">
        <item name="cornerRadius">7dp</item>
        <item name="cardBackgroundColor">@color/greyLight</item>
        <item name="strokeColor">@color/greyLight</item>
        <item name="strokeWidth">10dp</item>
        <item name="cardElevation">20dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="myBlueButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#223d7e</item>
    </style>

    <style name="myAddExpensesPopupButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/barBueColor</item>
    </style>

    <style name="alertDialogueButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
</resources>
